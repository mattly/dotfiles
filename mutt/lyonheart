set from = "matthew@lyonheart.us"

set sendmail      = "msmtp -a lyonheart"
set spoolfile     = "+Lyonheart/--lyonheart--"
set mbox          = "+Lyonheart/archive"
set postponed     = "+Lyonheart/drafts"
set record        = "+Lyonheart/sent"

macro index,pager ! \
  "<save-message>+Lyonheart/spam<enter>$" \
  "Send to Spam"
macro index,pager \# \
  "<save-message>+Lyonheart/trash<enter>$" \
  "Send to Trash"

